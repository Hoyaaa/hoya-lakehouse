<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="530dp"
    android:background="@color/gray"
    android:padding="16dp">

    <!-- 닫기 버튼 -->
    <ImageView
        android:id="@+id/map_closeButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ico_cancel"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp" />

    <!-- 사진 -->
    <ImageView
        android:id="@+id/photoCu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/photo_cu"
        android:scaleType="centerInside"
        android:contentDescription="@null"
        app:layout_constraintTop_toBottomOf="@id/map_closeButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="360:185" />

    <!-- 타이틀 -->
    <TextView
        android:id="@+id/cuTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cu"
        android:textColor="#FF000000"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@id/photoCu"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <!-- 부제 -->
    <TextView
        android:id="@+id/cuRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/convenience_store"
        android:textColor="#FF000000"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/cuTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp" />

    <!-- 오픈 시간 -->
    <LinearLayout
        android:id="@+id/openLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        app:layout_constraintTop_toBottomOf="@id/cuRoom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/open"
            android:textColor="#FF000000"
            android:textSize="20sp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cu_open"
            android:textColor="#FF000000"
            android:textSize="20sp" />
    </LinearLayout>

    <!-- 클로즈 시간 -->
    <LinearLayout
        android:id="@+id/closeLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        app:layout_constraintTop_toBottomOf="@id/openLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/close"
                android:textColor="#FF000000"
                android:textSize="20sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cu_close1"
                android:textColor="#FF000000"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/cuClose2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cu_close2"
            android:textColor="#FF000000"
            android:textSize="20sp"
            android:gravity="end"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp" />
    </LinearLayout>

    <!-- 전화번호 -->
    <LinearLayout
        android:id="@+id/phoneLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/closeLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ico_call"
            android:layout_marginEnd="8dp"
            android:contentDescription="@null"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cu_call"
            android:textColor="#FF1100FF"
            android:textSize="20sp"
            android:autoLink="phone"
            android:linksClickable="true" />
    </LinearLayout>

    <!-- 인스타그램 -->
    <LinearLayout
        android:id="@+id/instarLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/phoneLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ico_instar"
            android:layout_marginEnd="8dp"
            android:contentDescription="@null"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/instarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cu_instar"
            android:textColor="#FF1100FF"
            android:textSize="20sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
