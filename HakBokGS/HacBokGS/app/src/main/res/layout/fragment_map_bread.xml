<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="530dp"
    android:background="@color/gray"
    android:padding="16dp">

    <!-- 닫기 버튼 -->
    <ImageView
        android:id="@+id/map_closeButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ico_cancel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"
        android:contentDescription="@null"
        android:scaleType="centerInside" />

    <!-- 사진 -->
    <ImageView
        android:id="@+id/photoBread"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/photo_bread"
        android:contentDescription="@null"
        app:layout_constraintTop_toBottomOf="@id/map_closeButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="360:185" />

    <!-- 타이틀 -->
    <TextView
        android:id="@+id/breadTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bread"
        android:textSize="32sp"
        android:textColor="#FF000000"
        app:layout_constraintTop_toBottomOf="@id/photoBread"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <!-- 부제 -->
    <TextView
        android:id="@+id/breadRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bread_room"
        android:textSize="14sp"
        android:textColor="#FF000000"
        app:layout_constraintTop_toBottomOf="@id/breadTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp" />

    <!-- 오픈 시간 -->
    <LinearLayout
        android:id="@+id/openLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        app:layout_constraintTop_toBottomOf="@id/breadRoom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/open"
            android:textColor="#FF000000"
            android:textSize="20sp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bread_open"
            android:textColor="#FF000000"
            android:textSize="20sp" />
    </LinearLayout>

    <!-- 클로즈 시간 -->
    <LinearLayout
        android:id="@+id/closeLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        app:layout_constraintTop_toBottomOf="@id/openLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/close"
            android:textColor="#FF000000"
            android:textSize="20sp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bread_close"
            android:textColor="#FF000000"
            android:textSize="20sp" />
    </LinearLayout>

    <!-- 전화번호 -->
    <LinearLayout
        android:id="@+id/phoneLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/closeLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ico_call"
            android:layout_marginEnd="8dp"
            android:contentDescription="@null"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bread_call"
            android:textColor="#FF1100FF"
            android:textSize="20sp"
            android:autoLink="phone"
            android:linksClickable="true" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
