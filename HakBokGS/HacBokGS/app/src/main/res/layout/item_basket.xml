<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_basket"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:orientation="vertical"
    android:padding="10dp">

    <!-- 가게 정보(이미지, 상호명, 주문대기 수) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/store_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/box_rounded_border"
            android:padding="10dp"
            android:src="@drawable/logo_color_app" />

        <TextView
            android:id="@+id/store_name_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="가게명"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/waiting_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="0건 대기중..."
            android:textColor="@color/black"
            android:textSize="18sp" />

    </LinearLayout>

    <!-- 장바구니 담긴 메뉴 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_store_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@drawable/box_border"
        tools:listitem="@layout/item_basket_menu_each_store"/>

</LinearLayout>
