<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_modal"
    android:orientation="vertical"
    android:padding="20dp">


    <!-- 가게 이미지 & 가게 이름을 감싸는 가로 정렬 LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp">

        <!-- 가게 이미지 -->
        <ImageView
            android:id="@+id/kkui_store_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            android:src="@drawable/sto_kkuihankki"
            android:layout_marginEnd="1dp"/> <!-- 이미지와 텍스트 사이 간격 -->

        <!-- (가게 이름 + 대기팀) 감싸는 세로 LinearLayout -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 닫기 버튼 -->
            <Button
                android:id="@+id/btn_close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_closebl"
                android:contentDescription="닫기"
                android:layout_marginBottom="20dp"
                android:padding="0dp"/>

            <!-- 가게 이름 -->
            <TextView
                android:id="@+id/txtStoreName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="꾸이\n한끼"
                android:textSize="29dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"/>

            <!-- 대기팀 수 -->
            <TextView
                android:id="@+id/wait_kkui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대기팀 : 5 팀"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>


    <!-- 설명 -->
    <TextView
        android:id="@+id/txtDescription1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="혼자서도 부담없이 '한끼식사'로 즐길 수 있도록 오랜연구와 고심 끝에 탄생한 브랜드입니다."
        android:textSize="12.5sp"
        android:textColor="@color/black"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"/>

    <!-- 입장 버튼 -->
    <Button
        android:id="@+id/btnEnter_kkui"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#8EBD7D"
        android:text="입장하기"
        android:textColor="@color/white"
        android:textSize="23dp"
        android:textStyle="bold" />
</LinearLayout>
