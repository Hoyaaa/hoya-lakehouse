<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="40dp"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@color/warm_white"
        android:elevation="10dp"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="20dp">

        <!-- 김치찜 설명 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="10dp">

            <ImageView
                android:id="@+id/kimchijjim_image"
                android:layout_width="140dp"
                android:layout_height="160dp"
                android:contentDescription="kimchijjimn Image"
                android:src="@drawable/taesan_food" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:paddingHorizontal="10dp">

                <TextView
                    android:id="@+id/kimchijjim_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="김치찜 이름"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/kimchijjim_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이건 김치찜 설명입니다."
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/kimchijjim_ingredient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="재료 정보"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/kimchijjim_price"
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="백반 : 0원\n정식 : 0원"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>


        <!-- 선택 버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/upline"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="10dp">

            <Button
                android:id="@+id/btn_baekban"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/light_warm_beige"
                android:elevation="1dp"
                android:padding="40dp"
                android:text="백반"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_jeongsik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/light_warm_beige"
                android:elevation="1dp"
                android:padding="40dp"
                android:text="정식"
                android:textSize="30dp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
