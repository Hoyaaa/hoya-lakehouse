<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- 옵션 텍스트 + 선택 체크 아이콘 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/vote_option_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="옵션 내용"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/vote_selected_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ico_check"
            android:visibility="gone"
            android:contentDescription="선택됨" />
    </LinearLayout>

    <!-- 막대 바 -->
    <ProgressBar
        android:id="@+id/vote_progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:progressDrawable="@drawable/progress_vote_bar"
        android:layout_marginTop="4dp" />

    <!-- 퍼센트 텍스트 -->
    <TextView
        android:id="@+id/vote_percent_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0% (0명)"
        android:textSize="12sp"
        android:textColor="#666"
        android:layout_marginTop="2dp" />
</LinearLayout>
