<?xml version="1.0" encoding="utf-8"?>
                                                                   

    

                 
                              
                                                                        

                 
                             
                         
           

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/btn_date_background_selector"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="8dp"
        android:paddingTop="15dp"
        android:paddingBottom="10dp" android:tag="layout/todaymenu_date_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <!-- 요일 -->
        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:tag="binding_1"            
            android:textColor="@color/black"
            android:textSize="14sp" />

        <!-- 날짜 -->
        <TextView
            android:id="@+id/date_num"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_date_selector"
            android:gravity="center"
            android:padding="8dp"
            android:tag="binding_2"                     
            android:textColor="@color/selector_date_num_color"
            android:textSize="14sp" />

    </LinearLayout>
         